<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for (const item of items) { %>
            <div class="item">
                <input type="checkbox" />
                <p>
                    <%= item %>
                </p>
            </div>
            <% } %>

                <!-- prettier-ignore -->
                <form action=<%= listTitle === "Work List" ? "/work" : "/" %>
                    method="POST"
                    >
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
                    <button type="submit" name="list" value=<%= listTitle %> >+</button>
                </form>
    </div>
<%- include("footer") -%>